#hero
  width 100%
  height 60vh
  background-size cover
  background-position center
  position relative

  #hero-signup
    width 33vw
    bottom 10%
    right 10%
    position absolute
    text-align center
    color white

    #name
      font-size 52px
      border-bottom 5px solid white
      text-transform uppercase
      font-family 'Montserrat'
      font-weight bold

  #district
    display flex

    #for-blank, #district-spec
      width 50%
      text-align center

    #for-blank
      border-right 1px solid white

  #join
    text-align center
    background-color rgba(255, 255, 255, .3)

    .form-row
      margin-top 5px
      margin-bottom 5px

      .same-row
        display flex
        justify-content space-between

        input[name="zip"]
          width 45%

        input[type="button"]
          width 45%

.tabs
  .tabs-nav
    text-align center
    display flex
    justify-content space-between
    margin-left 10px

    .nav-item
      color black
      text-transform uppercase
      color #939393
      padding 20px
      font-family Montserrat
      font-size 23px
      cursor pointer

.contribute
	border 2px solid #7ED321 !important
	color #7ED321 !important
	border-radius 103.68px !important
	background-color rgba(126,211,33,0.1) !important

.volunteer
	border 2px solid #F83A30
	background-color rgba(248,58,48,0.1) !important

h1
  font-family Montserrat
