.volunteer-form
  color white
  padding 20px
  min-width 580px

  h2
    text-align center

  .form-container
    display flex
    width 100%
    padding 10px

    .info-fields
      width 300px
      margin-left 30px

      .form-row
        margin-top 10px
        margin-bottom 10px

    .volunteer-options
      display flex
      flex-direction column
      width 300px
      border-right 1px solid white

      input[type='checkbox'] {
        width:15px;
        height:15px;
        border-radius:5px;
        border:2px solid #555;
      }

      .option
        width 40%
        text-transform uppercase
        font-weight bold

      .checkbox-row
        display flex
        justify-content space-around
        height 50%
